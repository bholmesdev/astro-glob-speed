---
const posts = await Astro.glob('./posts.generated/*.mdx')
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>Astro</h1>
		{posts.map(post => <a style="display: block" href={post.url}>{post.file}</a>)}
		{posts.map(post => <post.default />)}
	</body>
</html>
