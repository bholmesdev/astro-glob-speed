---
const posts = await Astro.glob('../pages/posts.generated/*.mdx')
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <slot />
  {posts.map(post => <p>{post.file}</p>)}
</body>
</html>